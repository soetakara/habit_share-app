<%# CSS・・・assets/stylesheets/inputform.css %>
<%= render "share/header" %>
<div class='room-main'>
  <div>
    <div class='room-error'>
    <%# エラーメッセージを記述する %>
    </div>
      <div class='detail_new_room'>
        <div class='new_room_side'>
          <div class='room_create'>グループ作成</div>
        </div>
        <div class='new_room_main'>
          <div class='room_input'>
            <%= form_with model: @room, url: "#", local: true do |f| %>
            <div class="field">
            <div>グループ名</div>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "グルー名を入力してください",class: "input_form" %>
            </div>
          </div>
          <div class='room_input'>
            <div class="field">
            <div>メンバー</div>
            <select name="room[user_ids][]">
              <option value="">ユーザを選択してください</option>
                <% User.where.not(id: current_user.id).each do |user| %>
                <option value=<%= user.id %>><%= user.nickname %></option>
                <% end %>
            </select>
            <input name="room[user_ids][]" type="hidden" value=<%= current_user.id %>>
            </div>
          </div>
            <%= f.submit "作成" ,class: "room_btn" %>
          </div>
          <% end %>
        </div>
      </div>
  </div>
</div>