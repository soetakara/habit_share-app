<%# CSS・・・assets/stylesheets/message.css %>
<%= render "share/header" %>
<div class='message_top'>
  <div class='habit_list room_habit_list'>
  </div>
  <div class='habit_list room_habit_list'>
  </div>
</div>
<div class='message_middle'>
  <%= render partial: 'message', collection: @messages %>
</div>
<div class='message_bottom'>
  <div class='message_input'>
    <%= form_with model: @message, url: messages_path(room_id: @room_id), local: true do |f| %>
    <div class='message_form'>
    <%= f.text_field :comment, class: 'comment_form' %>
    </div>
    <%= f.submit 'SEND', class: 'message_send' %>
    <% end %>
  </div>
</div>